<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>

      <h1><%= `${user.username}'s profile` %></h1>

      <hr>
      
      <% if(currentUser && currentUser.role == 0) { %>
    
        <div class="text-left">
            <a href="/users/payment", class="btn btn-lg btn-success">Upgrade to Premium</a>
            <small>For only $15 you get access to create private wikis!</small>
        </div>
      <% } %>

        <hr>

      <% if(currentUser && currentUser.role == 1) { %>

        <form action="/users/<%= currentUser.id %>/updatestandard" method="POST">
          <input type="submit" value="Downgrade to Standard" class="btn btn-lg btn-warning"/>
        </form>
        
      <% } %>

      
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>